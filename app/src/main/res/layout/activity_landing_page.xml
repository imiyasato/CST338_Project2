<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".LandingPageActivity">
  <Button
      android:id="@+id/acceptAssignmentsButton"
      android:layout_width="240dp"
      android:layout_height="54dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/main_button"
      android:text="@string/accept_assignments"
      android:textColor="#ffffff"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/welcomeUserTextView" />

  <Button
      android:id="@+id/viewGradesButton"
      android:layout_width="240dp"
      android:layout_height="54dp"
      android:layout_margin="16dp"
      android:background="@drawable/main_button"
      android:text="@string/view_grades"
      android:textColor="#ffffff"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/acceptAssignmentsButton" />

  <Button
      android:id="@+id/teacherOptionsButton"
      android:layout_width="240dp"
      android:layout_height="54dp"
      android:layout_margin="16dp"
      android:background="@drawable/main_button"
      android:text="@string/teacher_options"
      android:textColor="#ffffff"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/viewGradesButton" />

  <Button
      android:id="@+id/adminOptionsButton"
      android:layout_width="240dp"
      android:layout_height="54dp"
      android:layout_margin="16dp"
      android:background="@drawable/main_button"
      android:text="@string/admin_options"
      android:textColor="#ffffff"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/teacherOptionsButton" />


  <TextView
      android:id="@+id/welcomeUserTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dip"
      android:fontFamily="monospace"
      android:gravity="center"
      android:text="@string/user_welcome"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>